@model Book

@{
    ViewData["Title"] = "Book";
}

<h1 class="fw-normal">
    Book Details
</h1>

<h1 class="fw-normal">
    <a asp-controller="Books" asp-action="ViewBook" asp-route-id="@Model.BookId" class="text-decoration-none">@Model.BookTitle</a>
</h1>

<p>
    @Model.Price.ToString("C")
</p>

<p class="small">
    Written by @Model.Author <br />
    Added to collection on @Model.DateAdded.ToShortDateString()
</p>

<p>
    Rating stars
    @for(int i = 1; i <= 5; i++) {
        if(i <= @Model.Rating){
            <span>i</span>
            continue;
        }
        <span>o</span>
    }
</p>

<h4>Description</h4>
<p>
    @Model.Description
</p>